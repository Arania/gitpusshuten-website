            %ul
              %li= link_to 'Initialization', '/documentation/getting-started/initialization/'
              %li= link_to 'Configuration', '/documentation/getting-started/configuration/'
              %li= link_to 'Deployment hooks', '/documentation/getting-started/deployment-hooks/'
              %li= link_to 'Setting up a user', '/documentation/getting-started/setting-up-a-user/'
              %li= link_to 'Pushing your application', '/documentation/getting-started/pushing-your-application/'
