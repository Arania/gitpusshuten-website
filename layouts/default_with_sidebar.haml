            %ul
              %li= link_to 'Help', '/documentation/commands/help/'
              %li= link_to 'Delete', '/documentation/commands/delete/'
              %li= link_to 'Initialize', '/documentation/commands/initialize/'
              %li= link_to 'Push', '/documentation/commands/push/'
              %li= link_to 'Remote', '/documentation/commands/remote/'
              %li= link_to 'User', '/documentation/commands/user/'
              %li= link_to 'Version', '/documentation/commands/version/'
            %li Modules
            %ul
              %li= link_to 'Active Record', '/documentation/modules/active-record/'
              %li= link_to 'Apache', '/documentation/modules/apache/'
              %li= link_to 'Bundler', '/documentation/modules/bundler/'
              %li= link_to 'NginX', '/documentation/modules/nginx/'
              %li= link_to 'Passenger', '/documentation/modules/passenger/'
