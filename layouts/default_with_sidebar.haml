    #wrapper
      .heading
        %h2 プッシュ点ー
        %h1
          Git
          %span.highlight Pusshuten
        .text
          %strong Heavenly
          Git-based
          %strong Deployment
      .navigation
        %ul
          %li= link_to_unless_current 'About', '/about/'
          %li= link_to_unless_current 'Documentation', '/documentation/'
